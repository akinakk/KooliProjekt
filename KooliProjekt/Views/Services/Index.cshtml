@using KooliProjekt.Data
@model PagedResult<KooliProjekt.Data.Service>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<div class="pager-container">
    @(await Component.InvokeAsync<KooliProjekt.Components.PagerViewComponent>(new { result = Model, viewName = "Default" }))
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Results.FirstOrDefault().NameOfService)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Results.FirstOrDefault().TotalPricePerService)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Results)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NameOfService)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPricePerService)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
