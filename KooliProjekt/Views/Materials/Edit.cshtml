@model KooliProjekt.Data.Material

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Material</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NameOfMaterial" class="control-label"></label>
                <input asp-for="NameOfMaterial" class="form-control" />
                <span asp-validation-for="NameOfMaterial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HowMuchUsed" class="control-label"></label>
                <input asp-for="HowMuchUsed" class="form-control" />
                <span asp-validation-for="HowMuchUsed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PricePerUnit" class="control-label"></label>
                <input asp-for="PricePerUnit" class="form-control" />
                <span asp-validation-for="PricePerUnit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BillId" class="control-label"></label>
                <select asp-for="BillId" class="form-control" asp-items="ViewBag.BillId"></select>
                <span asp-validation-for="BillId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
